@model MyWeeFee.Models.Accesspoint

@{
    ViewData["Title"] = "Ändern";
}

<h2>Ändern</h2>

<h4>Accesspoint</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SSID" class="control-label"></label>
                <input asp-for="SSID" class="form-control" />
                <span asp-validation-for="SSID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Encryption" class="control-label"></label>
                <input asp-for="Encryption" class="form-control" />
                <span asp-validation-for="Encryption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
